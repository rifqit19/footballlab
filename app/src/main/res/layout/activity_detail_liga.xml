<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".League.DetailLeague.DetailLiga"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/colorPrimaryDark"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimaryDark"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true">

                <ImageView
                    android:id="@+id/imageCollapse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/arsenal"
                    android:adjustViewBounds="true"
                    />

                <com.rifqit.footballlab.helper.SquereLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    >

<!--                    <ImageView-->
<!--                        android:id="@+id/imageCollapse"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        app:layout_collapseMode="parallax"-->
<!--                        android:src="@drawable/arsenal"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        />-->

                    <LinearLayout
                        android:layout_marginRight="@dimen/margin_mid"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/thumbnail_product_heigt"
                        android:background="@drawable/rounded_wth80"
                        android:fitsSystemWindows="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax">

                        <LinearLayout
                            android:id="@+id/linearInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageTrophy"
                                    android:layout_width="@dimen/thumbnail_icon_drawer"
                                    android:layout_height="@dimen/thumbnail_photo_profile" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/titleLiga"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/helveticaneue_medium"
                                        android:text="title"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_big_size" />

                                    <TextView
                                        android:id="@+id/descLiga"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_small"
                                        android:layout_marginTop="@dimen/margin_extra_small"
                                        android:maxLength="250"
                                        android:text="desc"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_small_size" />

                                    <TextView
                                        android:id="@+id/moreDescLiga"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_small"
                                        android:layout_marginTop="@dimen/margin_extra_small"
                                        android:maxLength="200"
                                        android:text="Read More>>"
                                        android:textColor="@color/blue_dark_overlay"
                                        android:textSize="@dimen/text_small_size"
                                        android:textStyle="italic" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_marginRight="@dimen/margin_extra_small">

                                    <LinearLayout
                                        android:id="@+id/lytWeb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:padding="@dimen/margin_extra_small"
                                            android:layout_width="@dimen/icon_mid_Large_size"
                                            android:layout_height="@dimen/icon_mid_Large_size"
                                            android:src="@drawable/ic_worldwide" />

                                        <TextView
                                            android:id="@+id/txtWeb"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/helveticaneue_medium"
                                            android:textColor="@color/black"
                                            android:text="Website"
                                            android:layout_marginLeft="@dimen/margin_extra_small"
                                            android:textSize="@dimen/text_small_size" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/lytYtb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:padding="@dimen/margin_extra_small"
                                            android:layout_width="@dimen/icon_mid_Large_size"
                                            android:layout_height="@dimen/icon_mid_Large_size"
                                            android:src="@drawable/ic_youtube" />

                                        <TextView
                                            android:id="@+id/txtYoutube"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/helveticaneue_medium"
                                            android:textColor="@color/black"
                                            android:text="YouTube"
                                            android:layout_marginLeft="@dimen/margin_extra_small"
                                            android:textSize="@dimen/text_small_size" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_marginLeft="@dimen/margin_extra_small">

                                    <LinearLayout
                                        android:id="@+id/lytFcb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:padding="@dimen/margin_extra_small"
                                            android:layout_width="@dimen/icon_mid_Large_size"
                                            android:layout_height="@dimen/icon_mid_Large_size"
                                            android:src="@drawable/ic_facebook" />

                                        <TextView
                                            android:id="@+id/txtFaceBook"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/helveticaneue_medium"
                                            android:textColor="@color/black"
                                            android:text="Facebook"
                                            android:textSize="@dimen/text_small_size"
                                            android:layout_marginLeft="@dimen/margin_extra_small"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/lytTwt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:padding="@dimen/margin_extra_small"
                                            android:layout_width="@dimen/icon_mid_Large_size"
                                            android:layout_height="@dimen/icon_mid_Large_size"
                                            android:src="@drawable/ic_twitter" />

                                        <TextView
                                            android:id="@+id/txtTwitter"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/helveticaneue_medium"
                                            android:textColor="@color/black"
                                            android:text="Twitter"
                                            android:textSize="@dimen/text_small_size"
                                            android:layout_marginLeft="@dimen/margin_extra_small"/>

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </com.rifqit.footballlab.helper.SquereLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_collapseMode="pin"
                    app:contentInsetStart="0dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/actionBarSize"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btn_back_detliga"
                            android:layout_width="@dimen/button_next_height"
                            android:layout_height="@dimen/button_next_height"
                            android:background="@drawable/selector_back"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_small"/>

                        <TextView
                            android:id="@+id/ttlLeague"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_back_detliga"
                            android:layout_marginLeft="@dimen/margin_extra_small"
                            android:text="Detail League"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_medium_size"/>



                        <ImageButton
                            android:id="@+id/searchIcon"
                            android:layout_width="@dimen/button_next_height"
                            android:layout_height="@dimen/button_next_height"
                            android:background="@drawable/ic_search_white"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/margin_small"/>

                        <!--<android.support.v7.widget.SearchView-->
                        <!--android:id="@+id/search123"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/button_next_height"-->
                        <!--android:layout_marginLeft="@dimen/margin_small"/>-->

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/actionBarSize"
                    app:tabBackground="@android:color/transparent"
                    app:tabGravity="fill"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_collapseMode="pin"
                    app:tabIndicatorColor="@color/gold"
                    app:tabIndicatorHeight="3dp"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/gold"
                    app:tabTextColor="@color/white"
                    android:layout_gravity="bottom"
                    />


            </android.support.design.widget.CollapsingToolbarLayout>



        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerSearch"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

</android.support.design.widget.CoordinatorLayout>