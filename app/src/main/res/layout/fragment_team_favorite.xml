<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorite.TeamFavorite.FragmentTeamFavorite"
    android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleFavTeam"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_mid"
        android:clipToPadding="false"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/relEmpty3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/lklklk3"
            android:text="Empty"
            android:textSize="@dimen/title_big_size"
            android:textColor="@color/textColor"
            android:fontFamily="@font/helvetica_neu_bold"/>

        <ImageView
            android:id="@+id/lklklk3"
            android:layout_width="@dimen/btn_round_width_login"
            android:layout_height="@dimen/btn_round_width_login"
            android:src="@drawable/box"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</LinearLayout>