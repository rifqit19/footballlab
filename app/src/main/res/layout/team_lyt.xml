<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/linearTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_mid">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconTeam"
                android:layout_width="@dimen/thumbnail_photo_profile_small"
                android:layout_height="@dimen/thumbnail_photo_profile_small"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/namaTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="NamaTeam"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/title_small_size" />

            <TextView
                android:id="@+id/stadiumTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="Stadium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                android:layout_marginTop="@dimen/margin_extra_small"/>

            <!--<TextView-->
                <!--android:id="@+id/leagueTeam"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/helveticaneue_medium"-->
                <!--android:text="League"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/text_medium_size" />-->

            <TextView
                android:id="@+id/webSiteTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="Website"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/gray_dark"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>