        android:layout_width="match_parent"
        android:layout_height="@dimen/height_logo_welcome"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        android:background="@drawable/rounded_wth50"
        android:layout_margin="@dimen/margin_mid">>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iconLiga"
                android:layout_width="@dimen/thumbnail_icon_drawer"
                android:layout_height="@dimen/thumbnail_icon_drawer"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/namaLiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/iconLiga"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/helveticaneue_medium"
                android:textSize="@dimen/text_medium_size"
                android:textColor="@color/white"
